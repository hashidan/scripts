#!/bin/bash

SEARCH_ENGINE="https://duckduckgo.com/?q="

q="$(echo | dmenu -p "Search the Web:")"

if [ -z "$q" ]; then
    exit 0
elif [[ $q =~ ^https?:\/\/ ]]; then
        firefox "${q}"
elif [[ $q =~ (\.co\.uk|\.com|\.net|.io)$ ]]; then
        firefox "${q}"
else
        firefox "${SEARCH_ENGINE}${q}"
fi
